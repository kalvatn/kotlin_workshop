<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} (%p): %c{1}.%M(%L) %m%n" />
		</layout>
	</appender>
	<!-- Default loggers. -->
	<logger name="com.betradar" additivity="false">
		<level value="debug" />
		<appender-ref ref="ConsoleAppender" />
	</logger>
	<logger name="com.oddsarbitrage" additivity="false">
		<level value="debug" />
		<appender-ref ref="ConsoleAppender" />
	</logger>

	<logger name="com.betradar.PropertiesFile" additivity="false">
		<level value="warn" />
		<appender-ref ref="ConsoleAppender" />
	</logger>
	<logger name="com.betradar.central.ComponentPropertiesLoader" additivity="false">
		<level value="warn" />
		<appender-ref ref="ConsoleAppender" />
	</logger>

	<root>
		<priority value="debug" />
		<appender-ref ref="ConsoleAppender" />
	</root>
</log4j:configuration>
